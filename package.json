{
    "name": "internal.service.discord",
    "module": "index.ts",
    "type": "module",
    "scripts": {
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start:dev": "bun --watch src/main.ts",
        "start:debug": "nest start --debug --watch",
        "start:prod": "bun ./src/main.ts",
        "build": "nest build",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "seed": "bun run scripts/seed.ts",
        "db:migrate-save": "prisma migrate dev",
        "db:migrate-up": "prisma migrate deploy",
        "db:clean": "prisma migrate reset",
        "db:init": "npm run db:migrate-save --name 'initial version' && npm run db:migrate-up && npm run seed",
        "generate-schema": "cat src/*/*.prisma > prisma/schema.prisma",
        "migrate:db-dev": "npm run generate-schema && prisma migrate dev --preview-feature --name $npm_config_name && prisma generate"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.4.5",
        "@nestjs/schematics": "^10.1.4",
        "@types/bun": "latest",
        "@types/express": "^5.0.0",
        "@types/node": "^22.7.5",
        "@typescript-eslint/eslint-plugin": "^8.9.0",
        "@typescript-eslint/parser": "^8.9.0",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1"
    },
    "peerDependencies": {
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.12.2",
        "@nestjs/common": "^10.4.4",
        "@nestjs/config": "^3.2.3",
        "@nestjs/core": "^10.4.4",
        "@nestjs/microservices": "^10.4.4",
        "@nestjs/platform-express": "^10.4.4",
        "@prisma/client": "^5.21.0",
        "class-validator": "^0.14.1",
        "http-graceful-shutdown": "^3.1.13",
        "rxjs": "^7.8.1",
        "uuid": "^10.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "prisma": {
        "schema": "src/databases/schema.prisma"
    }
}
